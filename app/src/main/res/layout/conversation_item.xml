<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center_vertical">

    <!-- Image de l'avatar pour chaque conversation -->
    <ImageView
        android:id="@+id/avatar_image_view"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_user_avatar"
    android:layout_marginEnd="12dp"
    android:contentDescription="Avatar de l'utilisateur"
     />

    <!-- Conteneur vertical pour afficher le nom et le dernier message -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <!-- Nom de la personne -->
        <TextView
            android:id="@+id/conversation_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom de la personne"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Dernier message échangé (statique ou dynamique) -->
        <TextView
            android:id="@+id/last_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dernier message..."
            android:textColor="#757575"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Heure ou date du dernier message -->
    <TextView
        android:id="@+id/conversation_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:34"
        android:textColor="#757575"
        android:textSize="12sp" />
</LinearLayout>
