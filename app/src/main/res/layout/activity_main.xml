<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:padding="16dp">

<TextView
    android:id="@+id/textViewWelcome"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Bienvenue dans l'application !"
    android:textSize="28sp"
    android:textColor="@color/purple_700"
android:layout_gravity="center"
android:paddingBottom="16dp" />

<EditText
    android:id="@+id/searchBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Rechercher une publication"
    android:padding="12dp"
    android:drawableLeft="@android:drawable/ic_menu_search"
    android:layout_marginBottom="16dp"
    android:backgroundTint="@color/purple_500"
android:textColor="@android:color/black" />

<Button
    android:id="@+id/buttonAddPost"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:text="Ajouter une publication"
    android:textColor="@android:color/white"
    android:backgroundTint="@color/purple_600"
    android:padding="12dp"
    android:textSize="18sp" />

<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recyclerViewPublications"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginBottom="16dp"
    app:layout_constraintTop_toBottomOf="@+id/searchBar"
    app:layout_constraintBottom_toTopOf="@+id/buttonAddPost" />

<!-- Publication 1 -->
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="16dp"
    android:background="@drawable/card_background"
    android:padding="12dp"
    android:elevation="4dp">

<ImageView
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:src="@drawable/arn"
    android:contentDescription="Icône Arnaque" />

<LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:layout_marginStart="8dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type: Arnaque"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/purple_700" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attention ! Une annonce de colocation douteuse circule. Ne faites pas confiance aux offres trop belles pour être vraies."
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/black" />
</LinearLayout>
</LinearLayout>

    <!-- Publication 2 -->
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:layout_marginTop="16dp"
android:background="@drawable/card_background"
    android:padding="12dp"
    android:elevation="4dp">

<ImageView
android:layout_width="48dp"
android:layout_height="48dp"
android:src="@drawable/rech"
android:contentDescription="Icône Annonce" />

<LinearLayout
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_weight="1"
android:orientation="vertical"
android:layout_marginStart="8dp">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Type: Annonce"
    android:textSize="18sp"
    android:textStyle="bold"
    android:textColor="@color/purple_700" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Cherche un binôme pour partager une chambre dans un appartement bien situé. Si intéressé(e), contactez-moi !"
    android:textSize="16sp"
    android:layout_marginBottom="8dp"
    android:textColor="@android:color/black" />
</LinearLayout>
    </LinearLayout>

    </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
