<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">


        <!-- Header for user info and app logo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical">

            <!-- Avatar -->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_user_avatar"
                android:layout_marginEnd="10dp"
                android:contentDescription="User Avatar"
                android:scaleType="centerCrop"
                android:layout_gravity="center_vertical" />

            <!-- Name and Status -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ben Ali Meriam"
                    android:textColor="#0D47A1"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/circle_blue"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="En ligne"
                        android:textColor="#4CAF50"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Logo -->
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/logo_background"
                android:contentDescription="App Logo"
                android:scaleType="centerCrop" />
        </LinearLayout>
        <!-- Search Bar (Moved to the top) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/editTextSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Chercher un message..."
                android:textColor="#000000"
                android:textSize="16sp"
                android:background="@drawable/message_input_background"
                android:padding="16dp"
                android:importantForAccessibility="yes" />

            <!-- Search button -->
            <ImageButton
                android:id="@+id/buttonSearch"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_search"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Chercher les messages"
                android:padding="12dp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Messages Container -->
        <LinearLayout
            android:id="@+id/messages_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:scrollbars="vertical" >

        </LinearLayout>

        <!-- Message Input Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/editTextMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Écrire un message..."
                android:textColor="#000000"
                android:textSize="16sp"
                android:background="@drawable/message_input_background"
                android:padding="16dp"
                android:inputType="textCapSentences"
                android:importantForAccessibility="yes" />

            <!-- Send button -->
            <ImageButton
                android:id="@+id/buttonSend"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_send"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Envoyer le message"
                android:padding="12dp"
                android:layout_marginStart="8dp" />

            <!-- Update button -->
            <ImageButton
                android:id="@+id/buttonUpdate"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_update"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Mettre à jour le dernier message"
                android:padding="12dp"
                android:layout_marginStart="8dp" />

            <ImageButton
                android:id="@+id/buttonDelete"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Supprimer le dernier message"
                android:padding="12dp"
                android:src="@drawable/ic_delete" />

            <!-- Delete button -->
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
