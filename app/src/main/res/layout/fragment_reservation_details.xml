<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReservationDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:orientation="vertical"
        android:background="@color/backgroundColor">

        <!-- Header -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primaryColor"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Reservation Details"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </com.google.android.material.appbar.MaterialToolbar>

        <!-- Reservation Name -->
        <TextView
            android:id="@+id/tvReservationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 Bedroom Apartment"
            android:textColor="@color/primaryText"
            android:textSize="22sp"
            android:layout_marginTop="8dp"/>

        <!-- Reservation Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Reservation Date:"
                android:textColor="@color/primaryText"
                android:layout_weight="1"
                android:textSize="20sp"
                android:paddingEnd="8dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                android:layout_weight="1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etReservationDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Date"
                    android:inputType="none"
                    android:textColor="@color/secondaryText"
                    android:padding="16dp"
                    android:focusable="false"
                    android:clickable="true" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!-- Number of Guests -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="94dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:paddingEnd="8dp"
                android:text="Guests:"
                android:textColor="@color/primaryText"
                android:textSize="20sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="156dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                </LinearLayout>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnDecreaseGuests"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/button_bg"
                android:text="-" />

            <EditText
                android:id="@+id/etGuests"
                android:layout_width="6dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="Enter number"
                android:inputType="number"
                android:padding="16dp"
                android:text="1"
                android:textColor="@color/secondaryText" />

            <Button
                android:id="@+id/btnIncreaseGuests"
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/button_bg"
                android:text="+" />
        </LinearLayout>

        <!-- Duration of Stay -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="94dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:paddingEnd="8dp"
                android:text="Duration:"
                android:textColor="@color/primaryText"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">
            </LinearLayout>

            <Button
                android:id="@+id/btnDecreaseDuration"
                android:layout_width="63dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/button_bg"
                android:text="-" />

            <EditText
                android:id="@+id/eDuration"
                android:layout_width="11dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="Enter number"
                android:inputType="number"
                android:padding="16dp"
                android:text="1"
                android:textColor="@color/secondaryText" />

            <Button
                android:id="@+id/btnIncreaseDuration"
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/button_bg"
                android:text="+" />
        </LinearLayout>

        <!-- Duration Type -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="94dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:paddingEnd="8dp"
                android:text="Duration Type:"
                android:textColor="@color/primaryText"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/cbMonths"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Months"
                android:textColor="@color/primaryText"
                android:textSize="16sp"
                android:layout_marginEnd="16dp" />

            <CheckBox
                android:id="@+id/cbNights"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nights"
                android:textColor="@color/primaryText"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Price Summary -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Summary"
            android:textColor="@color/primaryColor"
            android:textSize="20sp"
            android:layout_marginTop="24dp"
            android:textStyle="bold"/>

        <!-- Summary Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:padding="16dp"
            android:elevation="4dp">

            <TextView
                android:id="@+id/tvSummaryDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: -"
                android:textSize="16sp"
                android:textColor="@color/primaryText"/>

            <TextView
                android:id="@+id/tvSummaryGuests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guests: -"
                android:textSize="16sp"
                android:textColor="@color/primaryText"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvSummaryDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration: - nights"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvSummaryPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Price: -"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Confirm Button -->
        <Button
            android:id="@+id/btnNextStep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next Step"
            android:backgroundTint="@color/primaryColor"
            android:textColor="@android:color/white"
            android:layout_marginTop="24dp"
            android:padding="16dp"
            android:layout_gravity="center"
            android:elevation="6dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
